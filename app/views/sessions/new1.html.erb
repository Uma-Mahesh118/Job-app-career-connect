<h1 class="text-center mt-4">Login-in to Career Connect (Applicant) </h1>

<div class="container text-center">
    <div class="row justify-content-center">
        <div class="col-10">
        <%= form_with(scope: :session, url: login2_path, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
            <div class="form-group row">
                <%= f.label :email , {:class=> "col-2 col-form-label text-light"}%> <br/>
                <div class="col-10">
                    <%= f.email_field :email, {:class=>"form-control shadow rounded", :placeholder=>'Enter your email'} %>
                </div>
            </div>
            <br>
            <div class="form-group row">
                <%= f.label :password , {:class=> "col-2 col-form-label text-light"}%> <br/>
                <div class="col-10">
                    <%= f.password_field :password, {:class=>"form-control shadow rounded", :placeholder=>'Enter your password'} %>
                </div>
            </div>
            <br>
            <div>
                <%= f.submit 'login' , class: "btn btn-primary btn-lg shadow" %>
            </div>
        <% end %>
    </div>

        <div class="mb-10">
        <%= link_to '[ Cancel and return to Applicants listing ]', applicants_path, {:class=> "btn btn-outline-info" , :style=> "background-color:'white'"} %>
        </div>
    </div>
    
 </div>