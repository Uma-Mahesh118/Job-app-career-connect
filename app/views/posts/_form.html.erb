<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
        <%= render 'shared/errors', obj: @post %>
        <%= form_with(model: @post, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
            <div class="form-group row">
                <div class="col-2">
                    <%= f.label :Job_name , {:class=> "col-2 col-form-label text-light"}%> <br/>
                </div>
                <div class="col-10">
                    <%= f.text_field :name,  {:class=>"form-control shadow rounded", :placeholder=>'Title of Job'}%>
                </div>
            </div>
            <br>
            <div class="form-group row ">
                <div class="col-2">
                    <%= f.label :description , {:class=> "col-2 col-form-label text-light"}%> <br/>
                </div>
                <div class="col-10">
                    <%= f.text_area :description, {:class=>"form-control shadow rounded", :rows=> 10, :placeholder=>'Description of Job'} %>
                </div>
            </div>
            <br>
            <div class="form-group row ">
                <div class="col-2">
                    <%= f.label :skills , {:class=> "col-2 col-form-label text-light"}%> <br/>
                </div>
                <div class="col-2">
                    <%= f.collection_select :skills, Skill.all, :id, :name,  {prompt: "Make a selection from the below (can be empty)"}, { :multiple=> true, size: 5, class: "custom-select shadow rounded" } %>
                </div>
            </div>
            <br>

            <div >
                <%= f.submit class: "btn btn-primary btn-lg" %>
                <%= link_to '[ Cancel and return to companies listing ]', companies_path, {:class=> "btn btn-outline-danger" } %>
            </div>
        <% end %>
    </div>

        <div class="mb-10">
        <%= link_to '[ Cancel and return to companies listing ]', companies_path, {:class=> "btn btn-outline-info" } %>
        </div>
    </div>
    
 </div>